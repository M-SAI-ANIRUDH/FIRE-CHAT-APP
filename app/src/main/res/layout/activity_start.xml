<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#414040">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/lol">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/locomos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary">

            </TextView>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDarki">

            </TextView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#fff"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="|  L O G I N  |"
            android:layout_marginTop="110dp"
            android:background="#414040"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/login"
            android:elevation="5dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="| C R E A T E  N E W  A C C O U N T |"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:background="#414040"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/register"
            android:elevation="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lol"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:orientation="vertical"
        android:id="@+id/lolo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="f  r  o  m"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/lolo"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="280dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/msa" />
    </LinearLayout>



</RelativeLayout>